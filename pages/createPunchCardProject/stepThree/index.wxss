/*
 *自定义邀请模态框：实现点击转发按钮进行邀请微信好友、转发微信群，参与打卡
 */

/*弹出层蒙层*/
.modal-mask {
    width: 100%;
    height: 100%;
    position: fixed;      /*使之不跟随滚动条滚动*/
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.5;         /*设置不透明级别 */
    overflow: hidden;
    z-index: 9000;
    color: #fff;
}

/*自定义邀请模态框*/
.custom-invite-modal-dialog {
    width: 80%;
    height: auto;
    position: fixed;
    top: 50%;
    margin-top: -150px;
    left: 10%;
    z-index: 9999;
    background: white;
    border-radius: 10px;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.punch-card-invite-header {
    width: 100%;
    height: 150px;
    border-radius: 10px;
}

.punch-card-invite-img {
    width: 100%;
    height: 150px;
    border-radius: 10px;
    position: relative;
}
/*隐藏邀请模态框按钮*/
.hidden-custom-invite-modal {
    position: absolute;
    width: 30px;
    height: 30px;
    opacity: 1;
    border-radius: 50%;
    top: 3px;
    right: 3px;
}

/*自定义模态框邀请标题*/
.punch-card-invite-title {
    width: 100%;
    height: 40px;
    line-height: 40px;
    text-align: center;
    color: black;
    font-size: 16px;
}
/*自定义模态框邀请内容*/
.punch-card-invite-content {
    width: 228px;
    height: auto;
    margin: 0 0 15px 40px;

    line-height: 1.5;

    color: #9d9d9d;
    font-size: 14px;
    white-space: normal;
}
/*自定义模态框邀请按钮*/
.punch-card-invite-btn {
    width: 100%;
    height: 80px;
    border-radius: 10px;
}

.punch-card-invite-btn > button {
    background-color: red;
    width: auto;
    height: 50px;
    margin-left: 20px;
    margin-right: 20px;
    margin-top: 10px;
    line-height: 50px;
    border-radius: 5px;
    font-size: 17px;
    color: white;
    text-align: center;

}

/*打卡圈子详情信息*/
.punch-card-project-detail {
    width: 100%;
    height: auto;
    background-color: whitesmoke;
}

/*打卡圈子详情--封面图部分*/
.cover-img-container {
    width: 100%;
    height: 180px;
    background-color: white;
}

/*封面图*/
.cover-img {
    width: 100%;
    height: 170px;
}
/*封面图上的分享按钮*/
.share-btn-1 {
    width: auto;
    height: 20px;
    padding: 0;
    position: absolute;
    right: 0;
    top: 20px;

    border-radius: 10px 0 0  10px;
    background-color: indianred;

    display: flex;
    justify-content: space-around;
    align-items: center;
}

.share-btn-1 > image {
