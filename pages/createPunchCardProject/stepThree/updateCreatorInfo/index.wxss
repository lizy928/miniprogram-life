.container {
    background-color: whitesmoke;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}

/*填写圈主简介*/
.input-creator-intr-info {
    width: 100%;
    height: 200px;
    margin-bottom: 10px;
    padding-left: 15px;
    background-color: white;
}

.title {
    width: 100%;
    height: 60px;
    line-height: 60px;
    font-size: 16px;
    color: black;
    font-weight: bolder;
}

.input-creator-intr-info-area {
    width: 100%;
    height: 120px;
    line-height: 1.3;
}
.input-text-num-notice {
    width: auto;
    height: auto;
    font-size: 11px;
    text-align: right;
    padding-right: 25px;
    margin-bottom: 5px;
}

/*填写圈主微信号*/
.input-creator-weixin-info {
    width: 100%;
    height: 180px;
    padding-left: 15px;
    background-color: white;
}

.input-creator-weixin-info-notice {
    font-size: 14px;
    color: #cccccc;
    margin-bottom: 10px;
}

.input-creator-weixin-info-area {
    width: 60%;
    height: 30px;
    padding-left: 5px;
    border: 1px #cccccc solid;
    border-radius: 5px;


}
.input-creator-weixin-info-area input {
    width: 100%;
    height: 100%;
    line-height: 30px;
    font-size: 15px;
    color: black;
}

.placeholder-style {
    font-size: 15px;
    color: #cccccc;
}

/*保存按钮*/
.update-creator-intr-info-btn {
    width: 100%;
    height: 60px;
    text-align: center;
    background-color: white;
}
.update-creator-intr-info-btn text {
    width: auto;
    height: 40px;
    padding: 10px 25%;
    line-height: 40px;
    border-radius: 5px;
    color: white;
    background-color: #F0B27A;
}


